<%- include("partials/header"); -%>

<section class="News">
    <div class="container">
        <div class="row">
            <div class="col flash-header">
                <div style="height: 20px; width: 20px; float: left; margin-right: 10px;">
                    <div class="alert-spinner">
                        <div class="double-bounce1"></div>
                        <div class="double-bounce2"></div>
                    </div>
                </div>
                <h3 style="color: white; font-size: 15px;margin-top: 5px; margin-left: 35px; font-weight: bold">FLASH STORY</h3>
            </div>
            <div class="col-lg-10" style="background-color: white;">
                <div class="exclusive-slides" dir="ltr">
                    <marquee  behavior="" direction="">
                        <% for (var i = 0; i < news.length; i++) { %>
                        <a style="margin-right: 40px;" href="/news/<%=news[i]._id%>">  
                            <%= news[i].title %>
                        </a>
                        <% } %>
                    </marquee>
                </div>
            </div>
        </div>
    </div>

    <div class="container" style="padding: 0;">
        <div class="row" style="margin-top: 40px;">

            <div class="col-md-6 col=col-sm-12">
                <h5>Headlines</h5>
                <hr style="background-color: #bb1919; width: 60px; height: 2px; margin: 0; ">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel"
                     style="margin-top: 15px; margin-bottom: 20px;">
                     <div class="carousel-inner">
                        <% for (var i = 0; i < news.length; i++) { %>
                            <div  class="carousel-item <%= i == 0 ? 'active' : '' %>">
                                <a href="/news/<%=news[i]._id%>">
                                    <img style="height: 450px; background-size: cover;" src="data:image/<%=news[i].image.contentType%>;base64, 
                                    <%=news[i].image.data.toString('base64')%>" class="d-block w-100" alt="">
                                    <h4 class="mainstoryheader"><%= news[i].title %></h4>
                                </a>
                            </div>
                        <% } %>
                     </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </a>
                </div>
            </div>


            <div class="col-md-3 col-sm-6 editorspickdiv" style="padding-left: 0;">
                <h5></h5><br>
                <hr style="background-color: #F5F5F5; width: 0; height: 2px; margin: 0;">
                <% for (var i = (news.length-2); i < news.length; i++) { %>
                <a href="/news/<%=news[i]._id%>">
                    <div style=" margin-top: 10px;">
                        <img src="data:image/<%=news[i].image.contentType%>;base64, 
                        <%=news[i].image.data.toString('base64')%>" style="height:160px; width: 277px;" alt="">
                        <p class="editorspickheader"><%= news[i].title %></p>
                    </div>
                </a>
                <% } %>
            </div>
            <div class="col-md-3 col-sm-6" style="padding-left: 0;">
                <h5></h5><br>
                <hr style="background-color: #F5F5F5; width: 0; height: 2px; margin: 0;">
                <% for (var i = 3; i < 7; i++) { %>
                <div style="margin-top: 10px; margin-bottom: 0; background-color: white;">
                    <a href="/news/<%=news[i]._id%>">
                        <img style="height: 105px; width: 100px; margin-right: 7px; float: left;"
                             src="data:image/<%=news[i].image.contentType%>;base64, 
                             <%=news[i].image.data.toString('base64')%>"
                             alt="">
                        <p style="padding-top: 5px; padding-bottom: 5px; font-weight: bold; font-size: 15px;"><%= news[i].title %></p>
                    </a>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <div class="container" style=" padding: 0; margin-top: 20px;">
        <h5>Featured Stories</h5>
        <hr style="background-color: #bb1919; width: 60px; height: 2px; margin: 0;">
        <div class="row" style="margin-top: 15px;">
            <% for (var i = 2; i < 6; i++) { %>
            <div class="col-sm-6 col-lg-3">
                <div style=" background-color: white; width: 265px;">
                    <a href="/news/<%=news[i]._id%>">
                        <img style="height: 250px; width: 265px;"
                             src="data:image/<%=news[i].image.contentType%>;base64, 
                             <%=news[i].image.data.toString('base64')%>"
                             alt="">
                        <p style="margin-top: 5px; font-weight: 700; text-align: center;"><%= news[i].title %></p>
                    </a>
                </div>
            </div>
            <% } %>
        </div>


        <h5 style="padding-top: 40px; ">Top Stories</h5>
        <hr style="background-color: #bb1919; width: 60px; height: 2px; margin: 0;">
            <div  style=" margin-top: 15px;">
                <% for (var i = 0; i < news.length; i++) { %>
                <div style=" background-color: white; height: 240px; margin-bottom: 20px;  ">
                    <a href="/news/<%=news[i]._id%>">
                        <img style="height: 240px; width: 280px; margin-right: 10px; float: left;"
                             src="data:image/<%=news[i].image.contentType%>;base64, 
                             <%=news[i].image.data.toString('base64')%>"
                             alt="">
                        <p style="padding-top: 15px;  font-weight: bold;"><%= news[i].title %></p>
                    </a>
                    <p style=" margin-right: 10px;">
                        <%=news[i].content.substring(0, 600) + " ..."%>
                        <a href="/news/<%=news[i]._id%>"> Read More</a>
                        </p>
                </div>
                <% } %>
            </div>      
    </div>


    
    
</section>
<%- include("partials/footer"); -%>